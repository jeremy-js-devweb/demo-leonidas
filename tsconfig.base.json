{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@spartan-ng/button-helm": [
        "libs/ui/button-helm/src/index.ts"
      ],
      "@spartan-ng/alert-helm": [
        "libs/ui/alert-helm/src/index.ts"
      ],
      "@spartan-ng/icon-helm": [
        "libs/ui/icon-helm/src/index.ts"
      ],
      "@spartan-ng/alertdialog-helm": [
        "libs/ui/alertdialog-helm/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
